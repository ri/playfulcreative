%head
  %meta{:charset=> "utf-8"}
  %meta{"http-equiv" => "X-UA-Compatible", :content=> "IE=edge,chrome=1"}

  %title
    Playful Creative
  %meta{:name => "description", :content => ""}
  %meta{:name => "author", :content => ""}
  %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
  %link{ :rel => "shortcut icon", :href => "/favicon.ico"}
  %link{ :rel => "apple-touch-icon", :href => "/apple-touch-icon.png"}
  %link{ :rel => "stylesheet", :href => "/stylesheets/screen.css"}
  %link{ :rel => "stylesheet", :href => "/stylesheets/boilerplate.css"}
  %link{ :rel => "stylesheet", :href => "/stylesheets/fonts.css"}
  %link{ :rel => "stylesheet", :href => "/stylesheets/nivo-slider.css"}
  %link{ :rel => "stylesheet", :href => "/stylesheets/isotope.css"}
  %link{ :rel => "stylesheet", :href => "/stylesheets/slider-custom.css"}
  %link{ :rel => "stylesheet", :href => "/fancybox/jquery.fancybox-1.3.4.css"}
    
%body
  #container
    %nav{:id => "main"}
      %ul
        %li
          %a{:href => "visual.html", :class => "visual"}
            %span= "Purely Visual"
        %li
          %a{:href => "interaction.html", :class => "interaction"}
            %span= "Interaction"
        %li
          %a{:href => "inspiration.html", :class => "inspiration"} 
            %span="Inspiration"
        %li
          %a{:href => "about.html", :class => "about"}
            %span= "About"
    %header
      %a{:href=> "/"}
        = img "/images/logo.png"
        %h1 Playful Creative

    #main{ :role => "main"}
      = yield
    %footer
      Designed and Coded up in 
      %span.highlight1
        HTML5 
      and 
      %span.highlight2
        CSS3 
      by 
      Ri Liu

    / window.jQuery(function() { $('#works').css('visibility', 'hidden'); });
  :javascript
    document.getElementById("works").style.visibility = "hidden";
    document.getElementById("loader").style.display = "block";
    
  %script{ :src => "http://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js"}
  :javascript
    window.jQuery || document.write("<script src='js/libs/jquery-1.5.1.min.js'>\x3C/script>");
    
  %script{ :src => "js/plugins.js"}
  %script{ :src => "js/libs/modernizr-1.7.min.js"}
  %script{ :src => "js/libs/jquery.nivo.slider.pack.js"}
  %script{ :src => "js/libs/jquery.isotope.js"}
  %script{ :src => "js/libs/jquery.isotope.min.js"}
  %script{ :src => "fancybox/jquery.mousewheel-3.0.4.pack.js"}
  %script{ :src => "fancybox/jquery.fancybox-1.3.4.pack.js"}
  %script{ :src => "js/script.js"}

  /[if lt IE 7 ]
    %script{ :src => "js/libs/dd_belatedpng.js"}
    %script
      >DD_belatedPNG.fix("img, .png_bg")
:erb
  </html>